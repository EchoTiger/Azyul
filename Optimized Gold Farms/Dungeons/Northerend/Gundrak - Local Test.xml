<HBProfile>
<Name>Gundrak - Remote Version</Name>

<Blacklist>
	<Mob Name="Drakkari Frenzy" Id="29834" Flags="Pull,Combat" />
	<Mob Name="Small Frog" Id="13321" Flags="Pull,Combat" /> 
</Blacklist>

<QuestOrder>

	<CustomBehavior File="RunCode" > <!-- Do we have the behaviors? -->
		<![CDATA[
			if (!File.Exists(Utilities.AssemblyDirectory + "\\Quest Behaviors\\RemoteCode.cs") || !File.Exists(Utilities.AssemblyDirectory + "\\Quest Behaviors\\LoadRemoteCode.cs")) {
				Logging.Write(System.Windows.Media.Colors.Yellow, "[NOTE]: Downloading quest behaviors... your bot will automatically restart!");
				System.Net.WebClient Client = new System.Net.WebClient ();
				Client.DownloadFile("http://68.187.168.49/remoteProfileTesting/Snips/LoadRemoteCode.cs", Utilities.AssemblyDirectory + "\\Quest Behaviors\\LoadRemoteCode.cs");
				Client.DownloadFile("http://68.187.168.49/remoteProfileTesting/Snips/RemoteCode.cs", Utilities.AssemblyDirectory + "\\Quest Behaviors\\RemoteCode.cs");
				Logging.Write(System.Windows.Media.Colors.Yellow, "[NOTE]: Restarting bot!");
				System.Diagnostics.Process.Start(Utilities.AssemblyDirectory + "\\Honorbuddy.exe", "/autostart");
				TreeRoot.Shutdown();
			}
		]]>
	</CustomBehavior>

	<CustomBehavior File="LoadRemoteCode" />

	<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/Snips/ProfileSettings.xml" /> <!-- Activate Profile Settings -->
	<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/UniversalNav/ToNorthrend.xml" /> <!-- Go to Northrend -->
	<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/Snips/DefensiveHooks.xml" /> <!-- Activate Defensive Manuvers -->
	<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/Snips/ArraySniffer.xml" /> <!-- To sniff the arrays! -->
	<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/Snips/Extras.xml" /> <!-- Stats, GPH, etc. -->


	<While Condition="true" >
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/DungeonEnter/Gundrak.xml" /> <!-- Enter Dungeon -->
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/DungeonRun/Gundrak.xml" /> <!-- Run Dungeon -->
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/Snips/GuildBank.xml" /> <!-- Guild Bank Stuff -->
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/Snips/DeleteItems.xml" /> <!-- Delete Items -->
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/DungeonExit/Gundrak.xml" /> <!-- Exit Dungeon -->
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/DungeonVendor/ItemsAndMounts.xml" /> <!-- Vendor by Mounts/Items/Etc -->
		<CustomBehavior File="RemoteCode" CodeUrl="http://68.187.168.49/remoteProfileTesting/DungeonVendor/Gundrak.xml" /> <!-- Vendor by Gundrak Vendors -->
	</While>

</QuestOrder>
</HBProfile>