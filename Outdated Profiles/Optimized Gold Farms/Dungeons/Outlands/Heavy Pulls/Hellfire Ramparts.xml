			<CustomBehavior File="ForceSetVendor" DoMail="False" DoSell="True" DoRepair="True" />
			<ClearVendor />
			<RunTo X="179.7871" Y="2605.4" Z="87.28379" />
			<SetMailbox>
				<Mailboxes>
