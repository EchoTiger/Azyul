</If>

		<CustomBehavior File="RemoteCode" CodeUrl="https://raw.githubusercontent.com/EchoTiger/UNS-Raw/master/AzyulSnips/statter.xml"/>

<If Condition="!(Me.MapId == 543)" >

<CustomBehavior File="LoadRemoteCode"/>
