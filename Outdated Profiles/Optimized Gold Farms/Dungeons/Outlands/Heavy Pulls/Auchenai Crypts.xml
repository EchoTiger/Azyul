</If>

<While Condition="true" >
	<If Condition="!(Me.MapId == 558)" >
		<If Condition="Me.Location.Distance(new WoWPoint(-3392.553, 4960.243, 8.39039)) &gt;= 331.2615" > <!-- Universal Nav-to -->
			<CustomBehavior File="UserSettings" FindVendorsAutomatically="False" LootMobs="True" PullDistance="30" LogoutForInactivity="False" />
			<CustomBehavior File="FlyTo" X="-3385.121" Y="4941.416" Z="-54.78403" />  <!-- Mid-Hub -->
			<CustomBehavior File="FlyTo" X="-3363.058" Y="5047.969" Z="-79.39336" />
			<CustomBehavior File="MyCTM" X="-3361.46" Y="5170.593" Z="-101.0491" />
		</If>

		<If Condition="Me.Location.Distance(new WoWPoint(-3535.028, 4942.239, -101.3962)) &lt;= 20" > <!-- If we just vendored -->
			<CustomBehavior File="FlyTo" X="-3363.058" Y="5047.969" Z="-79.39336" />
			<CustomBehavior File="MyCTM" X="-3361.46" Y="5170.593" Z="-101.0491" />
		</If>
	</If>

	<While Condition="(Me.FreeBagSlots &gt;= 17)" >
		<If Condition="!(Me.MapId == 558)" >
			<MoveTo X="-3361.847" Y="5218.072" Z="-101.0482" />
			<CustomBehavior File="RunMacro" Macro="/script ResetInstances()" /> 
			<CustomBehavior File="RunCode" Code="Logging.Write(System.Windows.Media.Colors.DeepSkyBlue, &quot;[Azyul]: Entering Auchenai Crypts.&quot;);" />
			<CustomBehavior File="MyCTM" X="-3362.656" Y="5233.142" Z="-101.048" />
			<CustomBehavior File="WaitTimer" WaitTime="1100" />
			<While Condition="!(StyxWoW.IsInWorld)" >
				<CustomBehavior File="WaitTimer" WaitTime="1000" />
			</While>
		</If>
		<!-- Begin Instance Grind -->
		<If Condition="(Me.MapId == 558)" >
			<CustomBehavior File="Misc\InstanceTimer" Timer="Start" />
			<CustomBehavior File="Misc\RunLua" Lua="ShowLoadMessage = GetMoney();" /> 
			<CustomBehavior File="Misc\RunLua" Lua="ShowEngageMessage = GetMoney();" /> 
			<CustomBehavior File="Misc\RunLua" Lua="WarningIconRight = GetTime();" /> 

			<RunTo X="33.74844" Y="-0.630427" Z="-0.1248157" />

			<CustomBehavior File="RunLikeHell" AllowCombat="false" NumOfTimes="1" >
				<Hotspot X="85.48123" Y="39.70464" Z="4.262386" />
				<Hotspot X="89.28381" Y="8.471476" Z="-0.06451596" />
				<Hotspot X="76.3402" Y="-10.28817" Z="0.2821189" />
				<Hotspot X="92.00609" Y="-39.50627" Z="4.261407" />
				<Hotspot X="125.7242" Y="5.015305" Z="-0.1297353" />
				<Hotspot X="149.733" Y="39.40773" Z="4.259059" />
				<Hotspot X="188.8549" Y="3.964344" Z="-0.1232965" />
				<Hotspot X="238.0906" Y="13.98984" Z="-0.0640922" />
				<Hotspot X="248.4002" Y="-11.97912" Z="-0.07495958" />
				<Hotspot X="262.194" Y="8.858376" Z="4.136531" /> //LoS
			</CustomBehavior>


			<RunTo X="267.8954" Y="29.45913" Z="13.43622" />

			<CustomBehavior File="RunLikeHell" AllowCombat="false" NumOfTimes="1" >
				<Hotspot X="225.2872" Y="-165.6645" Z="26.59217" />
				<Hotspot X="113.8322" Y="-163.0328" Z="14.17562" />
				<Hotspot X="-73.3963" Y="-162.7334" Z="26.54875" /> <!-- Shirrak the Dead Watcher -->
				<Hotspot X="-64.43861" Y="-183.3418" Z="26.28424" /> //LoS
			</CustomBehavior>


			<RunTo X="-86.33018" Y="-162.9736" Z="26.58985" />

			<CustomBehavior File="RunLikeHell" AllowCombat="false" NumOfTimes="1" >
				<Hotspot X="-125.3437" Y="-166.7451" Z="26.58985" />
				<Hotspot X="-137.3347" Y="-252.3579" Z="26.60792" />
				<Hotspot X="-160.5051" Y="-277.7302" Z="26.75698" />
				<Hotspot X="-139.2198" Y="-312.7704" Z="26.59216" />
				<Hotspot X="-145.1646" Y="-339.703" Z="26.59216" />
				<Hotspot X="-142.3699" Y="-385.0722" Z="26.59075" />
				<Hotspot X="-60.58965" Y="-401.9025" Z="29.25527" />
